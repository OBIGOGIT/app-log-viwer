{
  "root": true,
  "extends": "standard",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": 0,
    "react/jsx-uses-react": [1],
    "react/jsx-uses-vars": [1],
    "react/no-unknown-property": [1]
  }
}
